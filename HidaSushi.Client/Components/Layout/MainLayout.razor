    protected override void OnInitialized()
    {
        CartService.OnCartChanged += StateHasChanged;
    }

    protected override void OnParametersSet()
    {
        // Recover from any previous errors when navigating to a new page
        _errorBoundary?.Recover();
    }

    public void Dispose()
    {
        CartService.OnCartChanged -= StateHasChanged;
    }

    private bool IsCurrentPage(string path)
    {
        return Navigation.Uri.EndsWith(path) || (path == "/" && Navigation.Uri.EndsWith("/"));
    }

    private void ToggleMobileMenu()
    {
        isMobileMenuOpen = !isMobileMenuOpen;
    }

    private void CloseMobileMenu()
    {
        isMobileMenuOpen = false;
    }

    private void ToggleCart()
    {
        Navigation.NavigateTo("/cart");
    }

    private int GetCartItemCount()
    {
        return CartService.GetTotalItemCount();
    }

    private void RecoverFromError()
    {
        _errorBoundary?.Recover();
        Navigation.NavigateTo("/");
    }
