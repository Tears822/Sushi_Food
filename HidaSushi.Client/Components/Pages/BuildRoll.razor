            selectedIngredients.Clear();
            selectedRollType = RollType.Normal;
            CalculatePrice();
            Logger.LogInformation("Cleared selection of {PreviousCount} ingredients", previousCount);
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error clearing selection");
        }
    }

