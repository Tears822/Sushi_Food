@code {
    private List<SushiRoll> signatureRolls = new();
    private bool isLoadingRolls = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadSignatureRolls();
        LocalizationService.OnLanguageChanged += OnLanguageChanged;
    }

    private void OnLanguageChanged()
    {
        InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        LocalizationService.OnLanguageChanged -= OnLanguageChanged;
    }

    private async Task LoadSignatureRolls()
    {
        try
        {
            isLoadingRolls = true;
            var allRolls = await ApiService.GetSushiRollsAsync();
            signatureRolls = allRolls?.Where(r => r.IsSignatureRoll && r.IsAvailable).Take(6).ToList() ?? new();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading signature rolls from backend");
            signatureRolls = new List<SushiRoll>();
        }
        finally
        {
            isLoadingRolls = false;
            StateHasChanged();
        }
    }

    private void AddToCart(SushiRoll roll)
    {
        try
        {
            CartService.AddItem(roll);
            ToastService.ShowSuccess($"{roll.Name} added to cart!", "Success");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error adding {RollName} to cart", roll.Name);
            ToastService.ShowError("Failed to add item to cart", "Error");
        }
    }

    private string GetRollImageUrl(string rollName)
    {
        // Map roll names to image URLs
        return rollName.ToLower() switch
        {
            "dragon roll" => "/images/rolls/dragon-roll.jpg",
            "california roll" => "/images/rolls/california-roll.jpg",
            "salmon teriyaki" => "/images/rolls/salmon-teriyaki.jpg",
            "spicy tuna" => "/images/rolls/spicy-tuna.jpg",
            _ => "/images/rolls/default-roll.jpg"
        };
    }
} 