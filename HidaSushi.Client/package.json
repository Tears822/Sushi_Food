{
  "name": "hidasushi-client",
  "version": "1.0.0",
  "description": "HidaSushi Client Application",
  "scripts": {
    "build-css": "tailwindcss -i ./wwwroot/css/input.css -o ./wwwroot/css/output.css --watch",
    "build-css-prod": "tailwindcss -i ./wwwroot/css/input.css -o ./wwwroot/css/output.css --minify",
    "dev": "npm run build-css",
    "build": "npm run build-css-prod"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.0.15",
    "tailwindcss": "^4.0.15"
  },
  "dependencies": {
    "flowbite": "^3.1.2"
  }
} 